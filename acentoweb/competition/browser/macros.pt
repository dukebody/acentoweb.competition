<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone.z3cform"
      tal:omit-tag="">

  <head></head>

  <body metal:define-macro="ratings-list">
    <h3>List of submitted works and their ratings</h3>
    <div class="ratings-list">
      <div tal:repeat="userrating context/@@competition-ratings-macros/getUserRatings">
        <a style="font-weight:bold"
           tal:attributes="href string:${userrating/context/absolute_url}/view">
          <span tal:replace="userrating/context/Title">Work title</span></a> &mdash;
        <span tal:replace="userrating/averageRating">Average rating</span>
        <table>
          <th>Judge</th><th>Rating</th>
          <tr tal:repeat="rating userrating/all_user_ratings">
            <td tal:content="rating/userid">user id</td>
            <td tal:content="rating">rating</td>
          </tr>
        </table>
        <br />
      </div>
    </div>

  </body>

</html>
